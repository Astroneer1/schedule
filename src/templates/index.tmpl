            <form method="POST" action="./Event">
                <div class="form-group">
                    <label for="formGroupExampleInput">イベント名</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" name="eventName" placeholder="飲み会、打ち合わせなど">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">メモ（任意）</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="memo" placeholder="※飲み会の日程調整しましょう！出欠〆切は◯日"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">候補日程</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="days"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">出席表を作る</button>
            </form>
